<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Qui paie quoi ?
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{% block stylesheets %}
			<link rel="preconnect" href="https://fonts.googleapis.com">
			<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
			<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
			<link rel="stylesheet" href="/assets/styles/app.css">
		{% endblock %}

		{% block javascripts %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
			<script src="https://kit.fontawesome.com/ac4b2d7ca9.js" crossorigin="anonymous"></script>
		{% endblock %}
	</head>
	<body>
		{% block header %}
			<header class="border-bottom p-1">
                <div class="fs-1 d-flex">
                    <a href={{ path('group_list') }} class="d-flex justify-content-center align-items-center full-div-link">
                         Qui paie quoi ? 
					</a>
                </div>
				<ul class="nav justify-content-center">
					<li class="nav-item">
						<a class="nav-link" href={{ path('group_list') }}>Mes groupes</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href={{ path('group_create') }}>Créer un groupe</a>
					</li>
				</ul>
			</header>
		{% endblock %}
		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}
		{% for message in app.flashes('error') %}
			<div class="alert alert-danger">
				{{ message }}
			</div>
		{% endfor %}
		{% block body %}
            <div class="p-3">
                {% block groupSingle %}{% endblock %}
                {% block groupList %}{% endblock %}
                {% block groupCreate %}{% endblock %}
                {% block groupEdit %}{% endblock %}
                {% block expenseCreate %}{% endblock %}
                {% block expenseEdit %}{% endblock %}
            </div>
		{% endblock %}
	</body>
</html>
